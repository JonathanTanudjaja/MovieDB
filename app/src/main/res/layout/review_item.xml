<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/detail_card_padding"
    android:layout_marginBottom="@dimen/detail_card_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/review_margin_bottom"
        android:text="@string/comment_author_label"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/review_author_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_content_label"
        android:textColor="@android:color/black"
        android:textSize="@dimen/detail_content_text" />
</LinearLayout>